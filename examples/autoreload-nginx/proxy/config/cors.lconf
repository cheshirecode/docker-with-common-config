add_header Access-Control-Allow-Credentials true always;
add_header Access-Control-Allow-Headers "origin, x-requested-with, content-type, Authorization" always;
add_header Access-Control-Allow-Methods "PUT, GET, POST, DELETE, OPTIONS" always;
add_header Access-Control-Expose-Headers "Content-Security-Policy, Location" always;
add_header Access-Control-Allow-Origin "$http_origin" always;
